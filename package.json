{
  "name": "constellation-viewer",
  "version": "2.0.0",
  "description": "Interactive Star Map & Constellation Viewer with real-time astronomical calculations",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "npx http-server src -p 8000 -o --cors",
    "build": "mkdir -p dist && cp -r src/* dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "serve": "npx http-server src -p 8000 -o --cors",
    "start": "npm run serve",
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "astronomy",
    "constellation",
    "star-map",
    "solar-system",
    "interactive",
    "visualization",
    "space",
    "stars",
    "planets",
    "javascript",
    "es6-modules",
    "canvas",
    "real-time"
  ],
  "author": "bhbmaster",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bhbmaster/constellation-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/bhbmaster/constellation-viewer/issues"
  },
  "homepage": "https://bhbmaster.github.io/constellation-viewer"
}
