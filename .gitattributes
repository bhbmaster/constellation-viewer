# Auto detect text files and perform LF normalization
* text=auto

# JavaScript files
*.js text eol=lf
*.mjs text eol=lf

# CSS files
*.css text eol=lf

# HTML files
*.html text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Python files
*.py text eol=lf

# Configuration files
*.config.js text eol=lf
*.json text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Package files
package-lock.json text eol=lf
yarn.lock text eol=lf
